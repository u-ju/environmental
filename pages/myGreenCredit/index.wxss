/* pages/myGreenCredit/index.wxss */
@import '../assets/index';
page {
  width: 100%;
  height: 100%;
  background-color: #fff;
  font-size: 28rpx;
}

.circle-box {
  text-align: center;
  width:160px;
  height:140px;
  padding: 20rpx 0;
  margin: auto auto 50rpx auto;
  position: relative;
  border-radius: 50%;
  background: linear-gradient(to bottom right, #b9c6dd, #fff);
  /* border: 4px solid  ; */
  /* margin-top: 10vw; */
}
.brx {
  margin-top: 40rpx;
}
.circle {
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}

.draw_btn {
  position: absolute;
  top: 50%;
  right: 0;
  left: 0;
  margin: auto;
  font-family:PingFang-SC-Medium;
  font-size: 60rpx;
  transform: translate(0,-50%);
  width: 120px;
  height: 120px;
  background-color: white;
  border-radius: 50%;
  line-height: 120px;
}
.title{
  font-size:48rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(79,215,241,1);
  text-align: center;
  margin: 10rpx 0 30rpx 0;
}
.brx .color4fd6f0{
  padding: 12rpx 40rpx;
}
.detailed .color4fd6f0{
  padding: 20rpx 0 0 0;
}
.item{
  border-bottom:1px solid #E8E8E8; 
}
.more{
  margin-top: 100rpx;
}
.more .iconfont{
  display: inline-block;
  margin-top: 10rpx;
}
.brx navigator:first-of-type{
  border-left: none
}