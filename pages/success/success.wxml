<swiper class='swiperbox' indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" current="{{index}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="{{afterColor}}" indicator-color="{{beforeColor}}" >
  <block wx:for="{{images}}" wx:key="index">
    <swiper-item>
      <image src="{{item}}" class="slide-image" mode='aspectFill' bindtap='previewImg' data-src='{{item}}' />
    </swiper-item>
  </block>
</swiper>