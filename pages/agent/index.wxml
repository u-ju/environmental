<wux-popup position="bottom" visible="{{ visible2 }}" bind:close="onClose2">
  <view class='size28 colorFB5A3E bold title_num'>￥{{result.pay_amount}}</view>
  <radio-group class="radio-group" bindchange="radioChange">
      <label wx:for="{{payment_usable}}" wx:key="index" class="radio flex_btw align_center" >
        <view class='flex align_center'>
          <image src='{{item.image}}'></image>
          <text class='color6 size26'>{{item.text}}</text>
        </view>
        <radio value="{{item.key}}" checked="{{item.checked}}"/>
      </label>
  </radio-group>

  <button bindtap="close2" class='pay'>确认支付</button>
</wux-popup>
<wux-popup closable visible="{{ visible1 }}"  bind:close="onClose1" bind:closed="onClosed1">
    <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="section">
      <view class="section__title">代理id</view>
      <input name="agent_id" placeholder="代理id" />
    </view>
    <view class="section">
      <view class="section__title">推荐人手机号</view>
      <input name="share_mobile" placeholder="推荐人手机号" maxlength='11' />
    </view>
    <button formType="submit">提交</button>
</form>
</wux-popup>
<wux-popup closable visible="{{ visible3 }}"  bind:close="onClose3" bind:closed="onClosed3">
  <wux-qrcode  id="qrcode" wux-class="qrcode" data="{{ value }}" fg-color="{{ fgColor }}" width="200" height="200" bind:click="previewImage" />
</wux-popup>