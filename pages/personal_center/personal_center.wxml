<import src="../../Components/tab-bar/tab-bar.wxml"/>
<template is="tabBar" data="{{tabBar:bindData.tabBar}}"/>
<view class='bg'>
  <view class="container">
    <view class='head' bindtap='uploadHeadPhoto'>
      <image mode='aspectFill' class='header' src='{{result.avatar}}'></image>
      <image mode='aspectFill' class='camera' src='../../images/camera@2x.png'></image>
    </view>
    <view class='size28 color0 center' bindtap='name' data-name='{{result.nickname}}'>{{result.nickname}}<image mode='aspectFill' class='pen' src='../../images/pen@2x.png'></image></view>
  </view>
</view>
<view class='marb20'>
<view class='item' wx:for='{{tag_list}}' wx:key="index" data-attach='{{item.attach}}' data-link='{{item.control}}' bindtap='link'>
  <view class="container flex_btw align_center" >
    <view class='size28 color0 '>{{item.name}}</view>
    <view class='item_right flex align_center'>
      <text  class='size28  {{!item.value_color?"color9":"color2EB354 bold"}} hidden1' style='color:{{item.value_color}}'>{{item.value}}</text>
      <image mode='aspectFill'  src='../../images/list_icon_next@2x.png'></image>
    </view> 
  </view>
</view>
</view>
