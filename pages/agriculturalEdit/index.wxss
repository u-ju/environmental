/* pages/agriculturalEdit/index.wxss */
.picture_itemmore {
  margin: 0rpx 20rpx 20rpx 0;
  position: relative;
  width: 134rpx;
  height: 134rpx;
}

.picture_itemmore .del {
  position: absolute;
  top: 0;
  right: 0;
  color: #fff;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
}
.picture_itemmore .del image{
  width: 100%;
  height: 100%;
}
.picture_itemmore .upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width: 134rpx;
  height: 134rpx;
  text-align: center;
  line-height: 134rpx;
  font-size: 12px;
}

.picture_itemmore image {
  width: 134rpx;
  height: 134rpx;
}
.picture_listmore{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  /* margin: 0 -20rpx; */
  width: 500rpx;
}
