.select_box{

  background: #fff;

  position: relative;

}

.select{
  box-sizing: border-box;
  width: 480rpx;
  border-radius: 8rpx;
  position: relative;
}

.select_text{

  font-size: 30rpx;

  flex: 1;

}

.select_img{
  position: absolute;
  right: 10rpx;
  width: 40rpx;

  height: 40rpx;

  display: block;

  transition:transform 0.3s;

}

.select_img_rotate{

  transform:rotate(180deg); 

}

.option_box{
  position: absolute;
  top: 92rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #EEEEEE;
  transition: height 0.3s;
  z-index: 999;
}

.option{
  display: block;
  line-height: 50rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #fff;
  padding: 10rpx;
}

