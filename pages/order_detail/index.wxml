<!--pages/order_detail/index.wxml-->
<view class='flex_btw align_center orderTitle'>
  <view class='width600' bindtap='link'>
    <view>收货人：{{address.name}}      <text class='marginl54'>{{address.phone}} </text>  </view>
    <view class='margt42'>收货地址：{{address.area_name}} {{address.address}}</view>
  </view>
  <view class='iconfont icon-jiantou'></view>
</view>

<view class='fkItem  shitem' wx:for="{{result.order_arr}}" wx:key="index" wx:for-item="order_arr">
  
  <view class='fkItem_goods flex' wx:for="{{order_arr.goods_arr}}" wx:key="index">
    <image src='{{item.thumb}}' class='goospic' mode='aspectFit'></image>
    <view class='fkItem_goods_ms '>
      <view class='color4 size28 flex_btw'><text class='one-hidden width'>{{item.spu_name}}</text> <text class='color898989'><text class='iconfont icon-cuohao'></text>{{item.buy_count}}</text></view>
      <view class='color4 size28 one-hidden'>{{item.sku_name}}</view>
      <view class='colorFE2C2C size28'>{{item.price}}</view>
      
    </view>
  </view>
</view>
<view class='color4 size28 kdxx'>
  <!-- <view>订单号：{{result.sku_name}}</view>
  <view class='flex_btw'><text>配送方式</text><text class='color898989'>快递免邮</text></view> -->
  <view class='flex_btw'><text>运费</text><text class='color898989'>{{result.freight_amount}}</text></view>
  <view class='flex_btw'><text>总金额</text><text class='colorFE3434 size30'>{{result.price_amount}}</text></view>
</view>
<view class='btnsure' bindtap='open3'>立即付款</view>

<wux-popup position="bottom" visible="{{ visible3 }}" bind:close="close3">
    <text class='iconfont icon-cuohao'  bindtap="close3"></text>
    <view class='center color4 size36 csgg'>选择支付方式</view>
    <view class='center colorFE3434 size60 csgg'>￥{{pay_amount}}</view>
    <view  >
      <view class='label' wx:for="{{items.payment_usable}}" wx:key ="index">
        <view>
        <view class='flex align_center radioitem'  bindtap='choose' data-index="{{index}}" data-key="{{item.key}}">
          <image src='../../images/choosed.png' class='choose' wx:if="{{item.choosed==1}}" mode='aspectFit'></image>
          <image src='../../images/choose.png'  class='choose' wx:else mode='aspectFit'></image>
          <view class='left'>
            <text class='size28 color4'>{{item.name}} \n </text>
          </view>
        </view>
        <view wx:if="{{item.options&&item.choosed==1}}">
          <block wx:for="{{item.options}}" wx:key="index">
          <view class='flex align_center radioitem radioinstallment'  bindtap='choosed' data-index="{{index}}" data-key="{{item.key}}">
            <image src='../../images/choosed.png' class='choose' wx:if="{{item.choosed==1}}" mode='aspectFit'></image>
            <image src='../../images/choose.png'  class='choose' wx:else mode='aspectFit'></image>
            <view class='left'>
              <text class='size28 color4'>{{item.name}} </text>
            </view>
          </view>
          </block>
        </view>
        </view>
      </view>  
    </view> 
    <view class='goodsBuy size36 marginb60' bindtap='goodsBuy'>立即支付</view>
</wux-popup>