  margin-bottom: 50rpx;
}
.mart50{
  margin: 50rpx 0 24rpx 0;
}
.btn{
  width:100%;
  line-height: 98rpx;
  height:98rpx;
  text-align: center;
  color: white;
  background:rgba(74,214,163,1);
  position: fixed;
  bottom: 0;
  left: 0;
}