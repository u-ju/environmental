<!--index.wxml-->

<block wx:if="{{token&&token!=1}}" >
<import src="../../Components/tab-bar/tab-bar.wxml"/>
<template is="tabBar" data="{{tabBar:bindData.tabBar}}"/>
<view class='indextop flex_btw align_center'>
  <image class='logo' src='{{config.logo}}'></image>
  <view class='weather flex align_center'>
    <image src='{{futureWeather[0].dayPictureUrl}}' class='weather_pic' mode='aspectFit'></image>
    <text class='size28'>{{weatherData.currentCity}}</text>
    <text class='size28 marginr20'>{{weatherData.weatherDesc}}</text>
    <view class='size28'>{{weatherData.temperature}}</view>
   
  </view>
  <!-- <view class='search flex_btw align_center' bindtap='search'> 
    
    <input  disabled='disabled' value='{{search}}' name='search' ></input>
    <image src='../../images/video_cz.png'  class='search_pic' ></image>
  </view> -->
</view>


<view class='bg' wx:if="{{tag.length>0}}">
<view class="container">
  <view class='banner'>
    
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"  indicator-active-color="{{beforeColor}}">
        <block wx:for="{{banner}}" wx:key="index">
          <swiper-item bindtap='link' data-link='{{item.control}}' >
              <image src="{{item.image}}" class="slide-image" />
          </swiper-item>
        </block>
    </swiper>
  </view>

  <view class='flex_btw'>
    <block wx:for="{{tag}}" wx:key="index">
      <view class='index_modular center' bindtap='link' data-link='{{item.control}}' data-children="{{item.children}}">
        
        <view class='index_modular_cri'>
          <image  mode='aspectFill' src='{{item.icon}}'></image>
        </view>
        <view class='index_modular_con color6'>{{item.name}}</view>
      </view>
    </block>
    
  </view>

  <view class='flex_btw theme wrap'>
    <block wx:for="{{block}}" wx:key="index">
      <view class='index_theme flex align_center' bindtap='link' data-link='{{item.control}}' data-open='1'  >
        <image class='index_themepic' src='{{item.background}}'></image>
        <!-- <image  mode='aspectFill' src='{{item.icon}}'></image> -->
        <view class='flex_col' huhu="{{index}}">
          <view class='size26 relative'>{{item.name}}</view>
        </view>
      </view>
    </block>
  </view>

  
</view>
</view>
<!-- <view class="ard_index" bindtap='link'  data-link='{{nper.control}}' >
  <image src="{{nper.image}}" />
</view> -->
<view class='bg marginfff'>
  <view class="container over_hid flex_btw twobr" wx:if="{{user.length>0}}" >
      <view class='index_putin border_right left' wx:for="{{user}}" wx:key ="index">
        <view class='size28 color3 flex'>
          <text >{{item.name}}</text>
          <view class='wallet color3 index_putin_right' bindtap='link' data-link='{{item.button.control}}'>
            {{item.button.name}}
          </view>
        </view>
        
        <view>
          <text class='size36 color6ADB7A'>{{item.value}}</text>
          <!-- <text class='color102'>次</text> -->
        </view>
      </view>
      <!-- <view class='index_putin left'>
        <view class='size28 color3 flex'>
