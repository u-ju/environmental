    <view class='bg marginfff'>
      <view class="container flex_btw twobr" wx:if="{{user.length>0}}">
        <view class='index_putin border_right left'  wx:for="{{user}}" wx:key="index" style='background-color:{{item.color}};'>
          <view class='size28  flex_btw'>
            <text>{{item.name}}</text>
            <view class='wallet  index_putin_right' bindtap='link' data-link='{{item.button.control}}'>
              {{item.button.name}}
            </view>
          </view>
          <view>
            <text class='size34'>{{item.value}}</text>
          </view>
        </view>
