    <view class='flex_btw align_center top'>
      <view class='flex'>
        <image class='locations' src='../../images/locationd.png'></image>
        <view class='width110 hidden1'>{{address}}</view>
        <!-- <text class='iconfont icon-xiajiantou'></text> -->
      </view>
      <view class='searchall flex_btw align_center' bindtap='search' > 
        <text class='iconfont icon-sousuo color4 searchall_pic' ></text>
        <input  disabled='disabled' value='{{search}}' placeholder='输入想要查找的内容' name='search' ></input>
        <image class='logoi' src='../../images/logoi.png'></image>
      </view>
     
    </view> 
    <view class='bg'>
      <view class="container">
        <view class='banner'>
          <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="{{beforeColor}}">
            <block wx:for="{{banner}}" wx:key="index">
              <swiper-item bindtap='link' data-link='{{item.control}}'>
                <image src="{{item.image}}" class="slide-image" />
              </swiper-item>
            </block>
          </swiper>
        </view>
        <view class='tab'>
          <swiper class="swiper-box" indicator-dots="{{indicatorDotstag}}" autoplay="{{autoplaytag}}" interval="{{intervaltag}}" duration="{{durationtag}}" indicator-active-color="{{afterColortag}}" indicator-color="{{beforeColortag}}">
            <block wx:for="{{taglen}}" wx:key="index" wx:for-index="indexnum">
              <swiper-item>
                <view class='flex wrap'>
                  <view wx:for="{{8}}" wx:key="index" class='tabitem' bindtap='link' data-link='{{tag[indexnum*8+index]["control"]}}' data-children='{{tag[indexnum*8+index]["children"]}}' wx:if="{{tag.length>indexnum*8+index}}">
                    <block>
                      <image src='{{tag[indexnum*8+index]["icon"]}}'></image>
                      <view>{{tag[indexnum*8+index]["name"]}}</view>
                    </block>
                  </view>
                </view>
              </swiper-item>
            </block>
          </swiper>
        </view>
        
