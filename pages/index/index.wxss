}
.twobr>view:last-of-type{
  border-right: none;
}
.wallet {
  width: 88rpx;
  height: 42rpx;
  border: 1rpx solid rgba(102, 102, 102, 1);
  border-radius: 21rpx;
  text-align: center;
  line-height: 42rpx;
}

.login {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.login .miaoshu {
  margin: 400rpx 0 40rpx 0;
  font-size: 28rpx;
}

.button {
  width: 300rpx;
  height: 70rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  justify-content: center;
}

.button image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

.swiper-notice {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 20rpx auto 10rpx auto;
  width: 700rpx;
  height: 76rpx;
  background:rgba(244,244,244,1);
  border-radius: 10rpx;
}

.swiper-notice text {
  font-size: 28rpx;
  color: #bfbfbf;
}

.swiper-notice image {
  width: 50rpx;
  height: 50rpx;
}

.swiper-nav {
  height: 80rpx;
  width: 580rpx;
  margin-left: 26rpx;
}

.swiper-nav swiper-item {
  display: flex;
  align-items: center;
}

.swiper-context {
  font-size: 28rpx;
  letter-spacing: 2rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.gotarea {
  margin-right: 30rpx;
  width: 260rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.className {
  animation: twinkling 2s infinite ease-in-out;
}

.animated {
  animation-duration: 2s;
  animation-fill-mode: both;
}

@keyframes twinkling {
  0% {
    opacity: 1;
  }
  50% {
    opacity: .2;
  }
  100% {
    opacity: 1;
  }
}
.swiperbox{
  height: 255rpx;
}
.swiperbox .wx-swiper-dot{
   
    display: inline-flex;
    margin-left: 0rpx;
    justify-content:space-between;
