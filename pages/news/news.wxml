<!--pages/news/news.wxml-->
<view class='topTabSwiper fixed'>
  <block wx:for="{{tab}}" wc:key="index">
    <view class='tab  {{currentData == index ? "tabBorer" : ""}}'  data-current = "{{index}}" data-cate_id = "{{item.id}}" bindtap='checkCurrent'>{{item.name}}</view>
  </block>
</view>
<view class='topTabSwiper'>
  
</view>

<block wx:for="{{news}}" wx:for-item='news' wx:key="index">
  <view class='swiper_con' bindtap='detail' data-news_id='{{news.news_id}}' >
    <view class='news_items flex'>
      <view class='image'>
        <image src="{{news.thumb}}" class="slide-image" mode='aspectFill'/>
      </view>
      <view class='describe'>
        <view class='bold500 color51 size28'>{{news.title}}</view>
        <view class='color102'>{{news.intro}}</view>
        <view class='color153'>{{news.created_at}}</view>
      </view>
    </view>
  </view>
</block>
<view wx:if="{{last}}" class='center'>
  已经到底啦
</view>
