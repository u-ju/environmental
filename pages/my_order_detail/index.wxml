</view>
<view class='moneyinfor'>
  <view class='flex_btw align_center reicon'>
    <text>支付方式</text>
    <text>{{result.payment_name}}</text>
  </view>
  <view class='flex_btw align_center reicon'>
    <text>商品总金额</text>
    <text>{{result.order_amount}}</text>
  </view>
