<!--pages/my_order_detail/index.wxml-->

<view class='pad32 top flex_btw align_center' wx:if="{{result.order_intro}}">
  <text>{{result.order_intro}}</text>
</view>
<view bindtap='open2' class='pad32 top flex_btw align_center' wx:if="{{result.order_logistics.length>0}}" >
  <view >
    <view>{{result.order_logistics[0]["express_trace"][0]["description"]}}</view>
    <view><text class='marginr'>{{result.order_logistics[0]["express_trace"][0]["time"]}}</text><text></text></view>
  </view>
  <icon class='iconfont icon-jiantou'></icon>
</view>
<view class='pad32 information'>
  <view><text>收货人：{{result.shipping_name}}</text><text>{{result.shipping_phone}}</text></view>
  <view>收货地址：{{result.shipping_address}}</view>
</view>
<view class='fkItem  shitem' >

  <view class='fkItem_goods flex' wx:for="{{result.order_goods}}" wx:key="index" bindtap='tiaozhuan' data-id='{{item.sku_id}}'>
  <!-- <navigator class='fkItem_goods flex' url='../installment_details/installment_details?id={{item.sku_id}}'> -->
    <image src='{{item.thumb}}' class='goospic' mode='aspectFill'></image>
    <view class='fkItem_goods_ms fkItem_goods_ms1'>
      <view class='color4 size28 flex_btw'>
        <view class='one-hidden width'>{{item.spu_name}}</view> 
        <view class='color898989'>
          <text class='iconfont icon-cuohao size22'></text>
          {{item.buy_count}}
        </view>
      </view>
      <view class='color4 size28'>{{item.sku_name}}</view>
      <view class='colorFE2C2C size28'>{{item.real_price}}</view>
    </view>
    <!-- </navigator> -->
  </view>
  

  <!-- <view class='flex_btw align_center reicon color898989'>
