/* pages/realname_authentication/realname_authentication.wxss */
@import '../phone/phone';
page{
  background-color: #F7F7F7;
}
.add-image, .up-pic image {
  
  width: 150rpx;
  height: 150rpx;
  color: #ddd;
  font-size: 144rpx;
  line-height: 95%;
  text-align: center;
  background-color: #fff;
  cursor: pointer;
  border-radius: 10rpx;
}

.picture_list {
  margin: auto;
}

.picture_item {
  position: relative;
  width: 402rpx;
  height: 242rpx;
  background-color: #FFFFFF;
  margin: 0 auto 28rpx auto;
  box-shadow:0px 4rpx 13rpx 0px rgba(200,201,201,0.23);
  border-radius: 10rpx;
  /* overflow: hidden; */
}

.picture_item .del {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 10;
  text-align: center;
  background-color: #f00;
  line-height: 40rpx;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width:402rpx;
  height:242rpx;
  text-align: center;
  line-height: 242rpx;
  font-size: 12px;
}

.picture_item>image {
  width:402rpx;
  height:242rpx;
  border-radius: 10rpx;
}
.bgg{
  background-color: #48D1CC;
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  margin: 30rpx auto 24rpx auto;
}
.bgg image{
  width: 48rpx;
  height: 44rpx;
}
.bgpic{
  position: absolute;
  z-index: 1;
}
.bgcon{
  background-color:rgba(0,0,0,.5);
  color: #fff;
  height:242rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
  border-radius: 10rpx;
}
.titlei{
  margin: 44rpx auto;
}