/* pages/realname_authentication/realname_authentication.wxss */
@import '../phone/phone';
page{
  background-color: #F7F7F7;
}
.add-image, .up-pic image {
  
  width: 150rpx;
  height: 150rpx;
  color: #ddd;
  font-size: 144rpx;
  line-height: 95%;
  text-align: center;
  background-color: #fff;
  cursor: pointer;
  border-radius: 10rpx;
}

.picture_list {
  margin: auto;
}

.picture_item {
  position: relative;
  padding-top: 38rpx;
  width: 402rpx;
  height: 206rpx;
  background-color: #FFFFFF;
  margin: 0 auto 28rpx auto;
  box-shadow:0px 4rpx 13rpx 0px rgba(200,201,201,0.23);
  border-radius: 10rpx;
}

.picture_item .del {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 10;
  text-align: center;
  background-color: #f00;
  line-height: 40rpx;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width:402rpx;
  height:242rpx;
  text-align: center;
  line-height: 242rpx;
  font-size: 12px;
}

.picture_item>image {
  width:402rpx;
  height:242rpx;
  margin-top: -38rpx;
}
.bgg{
  background-color: #4FD6F0;
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  margin: 0 auto 24rpx auto;
}
.bgg image{
  width: 48rpx;
  height: 44rpx;
}
.mar{
  margin: 100rpx auto 40rpx auto;
  text-align: center;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  /* padding-top: 20rpx; */
}
.head{
  padding: 20rpx 32rpx;
  border-bottom: 1px solid #E8E8E8;
}
.commodity_attr_box .mes{
  padding: 0 32rpx;
}
.mes>view{
  padding: 40rpx;
  border-bottom: 2rpx solid #E8E8E8; 
}
.mes>view:last-of-type{
  border: none;
}
button{
  margin: 50rpx auto
}
.sure{
  margin: 50rpx auto
}
.left{
  width: 200rpx;
}
.flex_a{
  width: 686rpx;
  height: 110rpx;
  font-size: 28rpx;
  color: #444;
  margin: auto;
  border-bottom: 1px solid #eee;
}
input{
  color: #898989;
  width: 486rpx;
}