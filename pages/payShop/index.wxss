page{
  font-size: 28rpx;
}
.head{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  /* background-color: rgb(239, 224, 224); */
  margin: 0 auto 20rpx auto;
  position: relative;
}
.infor{
  font-size: 28rpx;
  text-align: center;
  padding: 30rpx 0 60rpx 0;
  /* background-color: #F7F7F7; */
}
.pay_big{
  width:626rpx;
  height:auto;
  margin: auto;
  overflow: hidden;
  background:rgba(255,255,255,1);
  box-shadow:0px 4px 13px 0px rgba(200,201,201,0.44);
  border-radius:10rpx;
  font-size: 24rpx;
  color: #999999;
  padding: 30rpx;
}
.pay input{
  font-size: 40rpx;
  color: #333;
}
.pay_item>view{
  /* width:50%; */
  
}
.pay_item{
  padding: 10rpx 0;
  width: 500rpx;
  margin: auto;
  line-height: 50rpx;
}
.z_right{
  text-align: right;
  padding-right: 34rpx;
  font-size: 30rpx;
   justify-content:flex-end;
}
.z_left{
  padding-left: 34rpx;
  font-size: 30rpx;
}
.z_right image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}
.pay_item>.center{
  height: 90rpx;
  font-size:30rpx;
  font-weight:bold;
  color:rgba(68,213,162,1);
  line-height: 90rpx;
  border-top: 1px solid #E8E8E8;
  border-right: 1px solid #E8E8E8;
}
.pay_item>view:nth-of-type(2){
  border-right: none
}
.bottom{
  margin-top: 20rpx;
}
