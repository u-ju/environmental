/* pages/business_details/index.wxss */
@import '../agriculturalDetail/index';
page{
  font-size: 28rpx;
  color: #444;
  border: none;
}
.swiperbox{
  width:688rpx;
  height:326rpx;
  margin: auto;
  border-radius:20rpx;
  overflow: hidden;
  position: relative;
}
.slide-image,video{
  width: 100%;
  height: 100%;
}
.swiperbox .wx-swiper-dots.wx-swiper-dots-horizontal {
  position: absolute;
  left: unset;
  transform: translate(0,0);
  right: 16rpx;
  /* left: 500rpx; */
  /* z-index可设可不设*/
  
}
.swiperbox .wx-swiper-dot{
    width:24rpx;
    height:4rpx;
    display: inline-flex;
    margin-left: 0rpx;
    justify-content:space-between;
    border-radius: 0;
}
.swiperbox .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    border-radius: 0;
}
.dotbox{
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  transform: translate(-50%,0);
  z-index: 1000;
}
.dotbtn{
  width:82rpx;
  height:30rpx;
  background:rgba(39,170,217,1);
  border-radius:10rpx;
  text-align: center;
  font-size:20rpx;
  color: white;
  margin: 0 10rpx;

}
.dotpic{
  background:rgba(255,255,255,1);
  opacity:0.8;
  color: #444444
}
