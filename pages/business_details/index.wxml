<block wx:if="{{result}}">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="{{afterColor}}" indicator-color="{{beforeColor}}" class='swiperbox'>
    <swiper-item wx:for="{{result.images}}" wx:key="index">
      <video src="https://wyhb-res-pr.zgwyhb.com/uploads/video/2019/03/22/b3f15b7c71f503fabd76302a13c31ab2.mp4" custom-cache='{{false}}' poster="{{result.images[0]}}" objectFit="contain"></video>
      <!-- autoplay='autoplay' -->
    </swiper-item>
    <block wx:for="{{4}}" wx:key="index">
      <swiper-item wx:for="{{result.images}}" wx:key="index">
        <image src="{{item}}" class="slide-image" mode='aspectFill' />

      </swiper-item>
    </block>
    <view class='dotbox flex'>
      <view class='dotbtn'>
        <text class='iconfont icon-bofang size20'></text> 视频</view>
      <view class='dotbtn dotpic'>图片</view>
    </view>
  </swiper>
  <view class='con'>
    <view class='size32 color4 bold title'>{{result.title}}</view>
    <view class='flex_btw align_center'>
      <view class='flex align_center score'>
        <image src='../../images/smasonry.png' class='masonry' wx:for="{{5}}" wx:key="index"></image>
        <text>评分:4.8</text>
      </view>
      <view class='flex align_center'>
        <view wx:for="{{3}}" wx:key="index" class='tag size20 color0'>
          停车位
        </view>
      </view>
    </view>
    <view class='money'>￥59/人</view>
    <view class='label flex align_center'>
      <image src='../../images/stime.png' class='labelpic'></image>
      <view>营业中 | 上午:10:00-21:00，下午:10:00-21:00</view>
    </view>
    <view class='label flex_btw align_center'>
      <view class='flex'>
        <image src='../../images/sloc.png' class='labelpic'></image>
        <view class='address'>
          <view class='hidden1 marginb20'>中纱帽街8号远洋太古里负一层M027</view>
          <view class='color898989 size24 hidden1'>距离地铁3号线春熙路c口直走200米</view>
        </view>
      </view>
      <image src='../../images/stel.png' class='labeltel'></image>
    </view>
  </view>
  <view class='details'>
    <view class='reservation'>
      <image src='../../images/seat.png' class='labelpic'></image>
      <text>订座</text>
      <text class='color898989 size24'>（已订5桌）</text>
    </view>
    <view class='tab'>
      <view class='flex'>
        <view wx:for="{{tab}}" wx:key="index" class='tabitem bold {{active==index?"active":""}}' data-index='{{index}}' bindtap='tabswitch'>{{item}}</view>
      </view>
    </view>
    <scroll-view scroll-y scroll-with-animation class="nav_right" scroll-into-view="{{toView}}" bindscroll='scroll' style="height:{{s_height}}px;">
      <view class='spu view0' id='view0'>
        <view class='flex_btw'>
          <view class='spug flex_col' wx:for="{{3}}" wx:key="index">
            <image src='https://wyhb-res-pr.zgwyhb.com/uploads/image/2019/03/22/4a7a6efe3b50bccd2d3f6697fcb985ca.jpg'></image>
            <view class='spud'>
              <view class='size26 center'>新鲜毛肚</view>
              <view class='flex_btw align_center spum'>
                <text class='size26 colorFE2C2C'>￥59.9</text>
                <view class='stepper'>
                  <image src='../../images/sredu.png' bindtap='bindMinus' hidden='{{minusStatus==0}}'></image>
                  <text wx:if='{{minusStatus==1}}' class='countnum'> {{num}} </text>
                  <!-- <input bindinput='bindManual' value='{{num}}' hidden='{{minusStatus==0}}'></input> -->
                  <image src='../../images/sadd.png' bindtap='bindPlus'></image>
                </view>
              </view>
            </view>
          </view>
        </view>
        <view class='more flex align_center'>
          <view>更多</view>
          <text class='iconfont icon-xiangxiajiantou'></text>
        </view>
      </view>
      <view class='goods_intr3 view1' id='view1'>
        <view class='size28 color4 allpl'> <text class='bold'>用户评论</text> （{{list.length}}条）</view>
