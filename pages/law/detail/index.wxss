  width:686rpx;
  height:365rpx;
  border-radius:15rpx;
  overflow: hidden;
}
.title{
  padding: 24rpx 0;
  border-bottom: 1px solid #eee;
}
.con{
  text-indent: 16rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
}
.top{
  padding: 20rpx 32rpx;
