<view  wx:if="{{list.length>0}}">
<!-- <block wx:for="{{9}}" wx:key="index"> -->
<view class='shop' wx:for="{{list}}" wx:key="index" wx:for-item="list">
  <view class="inner" bindtap='detail' data-id='{{list.shop_id}}'>
    <view class="cover">
      <image src="{{list.thumb}}" class="cover-img" mode='aspectFill'/>
    </view>
    <view class='describe'>
      <view class='flex_btw'>
        <view class='bold color51 size28'>{{list.title}}</view>
        <view class="renzheng" >{{list.status_name}}</view>
      </view>
      <view class='flex_btw color4'>
        <view class='center czbtn' data-gather_qrcode='{{list.gather_qrcode}}' catchtap='erwm'>
          <image src='../../images/erwm.png'></image>
          <view> 收款码</view>
        </view>
        <view class='center czbtn'>
          <navigator url='../businessProductAdd/index?id={{list.shop_id}}'>
            <image src='../../images/addspu.png'></image>
            <view> 添加产品</view>
          </navigator>
        </view>
        <view class='center czbtn'>
          <navigator url='../businessProductview/index?id={{list.shop_id}}'>
            <image src='../../images/look.png'></image>
            <view> 查看产品</view>
          </navigator>
        </view>
      </view>
      <!-- <view class='color153 flex_btw '>
