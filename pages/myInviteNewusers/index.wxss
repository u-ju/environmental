/* pages/myInviteNewusers/index.wxss */
page{
  font-size: 28rpx;
  color: #444;
}
.banner{
  width: 100%;
  height: 413rpx;
  position: relative;
  /* background-color: #FBECF2; */
  /* overflow: hidden; */
  /* margin: auto; */
  
}
.banner image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.banner>view{
  position: relative;
  z-index: 1;
}
.invite{
  width:216rpx;
  height:68rpx;
  background:rgba(255,255,255,1);
  border-radius:44rpx;
  text-align: center;
  line-height: 68rpx;
  margin: 40rpx auto 0 auto;
}
.invitesus{
  margin: 58rpx 0 18rpx 0;
  padding: 16rpx 0;
  border-bottom: 20rpx solid #EEEEEE;
}
.invitesus>view{
  padding: 6rpx 0;
}
.item{
  margin: 0 32rpx;
  padding: 22rpx 0 36rpx 0;
  border-bottom: 1px solid #EEEEEE;
  width: 686rpx;
}
.item image{
  width:88rpx;
  height:88rpx;
  background:rgba(238,238,238,1);
  border-radius:50%;
  margin-right: 11rpx;
}
.item .shop{
   border-radius:0;
}
.flex_col{
  height:88rpx;
}
.bor{
  border-bottom: 4rpx solid #4FD6F0;
}
.num{
  width:628rpx;
  box-shadow:0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.35);
  border-radius:10rpx;
  background-color: #fff;
  margin: 50rpx auto 0 auto;
}
.zong{
  padding-top: 50rpx;
}
.num>view{
  width: 50%;
  text-align: center;
  padding: 12rpx 0;
}
.num>view:nth-child(2),.num>view:nth-child(1){
  border-bottom: 1px solid #EEEEEE;
}