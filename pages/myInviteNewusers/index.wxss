/* pages/myInviteNewusers/index.wxss */
page{
  font-size: 28rpx;
  color: #444;
}
.banner{
  width: 100%;
  height: 413rpx;
  position: relative;
  background-color: #FBECF2;
  overflow: hidden;
}
.banner image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.invite{
  width:305rpx;
  height:88rpx;
  background:rgba(255,255,255,1);
  opacity:0.7;
  border-radius:44rpx;
  color: #4FD7A3;
  text-align: center;
  line-height: 88rpx;
  margin: 218rpx auto 0 auto;
}
.invitesus{
  margin: 18rpx 32rpx;
  padding: 26rpx 0;
  border-bottom: 1px solid #EEEEEE;
}
.item{
  margin: 0 32rpx 0 32rpx;
  padding: 22rpx 0 36rpx 0;
  border-bottom: 1px solid #EEEEEE;
}
.item image{
  width:88rpx;
  height:88rpx;
  background:rgba(238,238,238,1);
  border-radius:50%;
  margin-right: 11rpx;
}
.flex_col{
  height:88rpx;
}