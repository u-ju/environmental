/* pages/guide/index.wxss */

page {
  border: none;
  font-size: 30rpx;
}

.overflow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

.content {
  display: flex;
  width: 100%;
  height: calc(100vh-70rpx);
  position: absolute;
  /* bottom: 0rpx; */
  left: 0;
  /* top: 100rpx; */
  overflow: hidden;
}

.menu-container {
  width: 20%;
  flex: 0 0 130rpx;
  background: #f7f7f7;
}

.detail-container {
  width: 80%;
  flex: 1;
  height: 100%;
  background-color: white;
  display: block;
}

.scroll-view {
  width: 100%;
  height: 100%;
}

.scroll-view-ul {
  width: 100%;
  height: 100%;
  background-color: rgb(247, 247, 247);
}

.scroll-view-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 130rpx;
}

.borderleft {
  /* height: 60rpx;
  line-height: 60rpx; */
  width: 100%;
  text-align: center;
}
.scroll-view-item image{
  width: 53rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}
