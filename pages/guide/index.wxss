.active {
  color: rgb(46, 179, 84);
  background-color: #fff;
}

.active view {
  border-left: 8rpx solid rgb(46, 179, 84);
}

.market-scroll-list {
  height: 100%;
  /* padding: 0 66rpx; */
  display: flex;
}
.scroll-header {
  display: flex;
  white-space: nowrap;
}

.scroll-header text {
  display: inline-block;
  width: 170rpx;
  height: 60rpx;
  background-color: transparent;
  text-align: center;
  line-height: 60rpx;
  margin-right: 20rpx;
  color: #444;
  border-radius:5rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.scroll-header text.active {
  
  background-color: #4FD6F0;
  color: white;
}

.hengnav {
 padding: 32rpx 12rpx;
 border-bottom: 20rpx solid #eee;
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.coverimg{
  width: 170rpx;
  height: 170rpx;
  margin-bottom: 10rpx;
  border-radius:10rpx;
}
.listitem{
  margin-top: 30rpx;
  width: 33%;
  display: inline-block;
  text-align: center;
}
.scroll-view-active{
  background-color: white;
  color: #4FD6F0;
}