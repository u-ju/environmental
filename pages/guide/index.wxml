              <block wx:for='{{tablen}}' wx:key="index" wx:for-index="indexnum">
                <view class='listitem' wx:for="{{3}}" wx:key="index">
                  <image src='{{guide_cate[indexSize1]["children"][indexnum*3+index]["icon"]}}' class="coverimg" mode='aspectFill' />
