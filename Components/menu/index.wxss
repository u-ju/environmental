
.buttom{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom:110rpx;
  right: 30rpx;
  z-index: 1001;
  /* background-color: #97E3AA; */
  background:linear-gradient(0deg,rgba(68,213,162,1) 0%,rgba(153,228,171,1) 100%);
  box-shadow: 0px 0px 4rpx #ccc;
  border-radius: 50%;
  text-align: center;
  justify-content: center;
  align-items: center;
}
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right:0;
  bottom:0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.drawer_box {
  overflow: hidden;
  position: fixed;
  z-index: 1001;
}
.buttom image{
  width: 40rpx;
  height: 40rpx;
  line-height: 100rpx;
}