.icon{
  width:48rpx;
  height: 48rpx;
  margin: 10rpx auto 0 auto;
}
.tabar{
  position: fixed;
  bottom:0;
  width: 100%;
  height: 98rpx;
  z-index: 999;
  border-top: 1px solid #F7F7F7;
}
.tabBar{
  width: 100%;
  height: 100%;
  position: absolute;
  background:white;
  font-size:20rpx;
  color:#666;
  display: flex;
  justify-content: space-between;
  z-index: 888;
}

 .tabBar-item{
  width:30%;
  text-align: center;
  position: relative;
}
/*当前字体颜色*/
.tabBartext{
  color:#2EB354;
}
.tabBar_center{
  position: absolute;
  left: 35%;
  overflow: visible;
  height: 100rpx;
}

.zhe{
  width: 90%;
  height: 100rpx;
  position: absolute;
  top: 0;
}
.tabBar_center .tabBartext{
  position: relative;
  z-index: 10000;
  margin-top: 4rpx;
}
.i-icon{
  font-weight: bold;
}
.tabBar>view:nth-of-type(2) .cricle{
  width: 106rpx;
  height: 106rpx;
  border-radius: 50%;
  position: absolute;
  /* background-color: rgb(46,179, 84); */
  text-align: center;
  line-height: 106rpx;
  color: white;
  top: -30rpx;
  left: 50%;
  margin-left: -54rpx;
}

.cricle image{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top:0;
}
.cricle text{
  position: relative;
  z-index: 2;
}
.tabBar>view:nth-of-type(1) image{
  width: 45rpx;
  height: 45rpx;
}
.tabBar>view:nth-of-type(3) image{
  width: 46rpx;
  height: 45rpx;
}
.tabBar-item .image_box{
  height: 58rpx;
  overflow: hidden;
  margin: 0 0 4rpx 0;
}
