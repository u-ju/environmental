/* 支付密码框 */

.pay_number {
  margin: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.pay_number_interval {
  margin: 0 auto;
  display: flex;
  flex-direction: row;
}
.content{
  height: 150rpx;
}
/* 第一个格子输入框 */
.content .noBorder{
   /* border-left:none;  */
}


/* 支付密码框聚焦的时候 */

.get_focus {
  border-color: orange;
}

/* 单个格式样式 */

.password_dot {
  border: 1px solid #000;
  /* width: 74rpx;
  height: 74rpx; */
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  margin: 0 20rpx;
  font-size: 36rpx;
}

.password_dot_interval {
  flex: 1;
  border: 1px solid #000;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  
}

/* 单个格式样式（聚焦的时候） */

.get_focus_dot {
  flex: 1;
  border: 1px solid #000;
  border-radius: 8rpx;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
  font-size: 36rpx;
}

.get_focus_dot_interval {
  flex: 1;
  /* border: 1px solid red; */
  margin-right: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 模拟光标 */

.cursor {
  width: 1px;
  height: 15px;
  background-color: rgb(46,179, 84);
  animation: focus 0.7s infinite;
}

/* 光标动画 */

@keyframes focus {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
  }
}

/* 格式中的点 */

.dot {
  width: 10px;
  height: 10px;
  background-color: #000;
  border-radius: 50%;
}

/* 输入框 */

.input_container {
  height: 0;
  width: 0;
  min-height: 0;
  position: relative;
  text-indent: -999em;
  left: -100%;
}
