.toast_content_box {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 999;
}

.toast_content {
  /* width: 30%;   *//* padding: 20rpx 30rpx;  
