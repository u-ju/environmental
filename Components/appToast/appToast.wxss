}

.toast_image {
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 310rpx;
}

.toast_content_text {
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  position: relative;
  z-index: 11;
}

.toast_jia {
  margin: 90rpx 0 0 0;
}

