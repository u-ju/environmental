.wux-input {
  position: relative;
  display: -ms-flexbox;
  display: flex;
  align-item: center;
  height: 90rpx;
}
.wux-input__label {
  margin-left: 0;
  margin-right: 10rpx;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  width: 210rpx
}
.wux-input__control {
  -ms-flex: 1;
  flex: 1
}
.wux-input__item {
  width: 100%;
  border: 0;
  outline: 0;
  -webkit-appearance: none;
  background-color: transparent;
  font-size: inherit;
  color: inherit;
  height: 100%;
  /* min-height: 1.47058824em; */
  line-height: 100%
}
.wux-input__extra {
  color: #888;
  margin-left: 10rpx
}
.wux-input__error {
  margin-left: 10rpx
}
.wux-input__clear {
  display: none;
  margin-right: 20rpx;
}
.wux-input--focus .wux-input__clear {
  display: block
}
.wux-input--disabled {
  opacity: .3
}
.wux-input--error .wux-input__control {
  color: #ef473a
}
.wux-input__label{
  width:120rpx;
  font-size:28rpx;
  font-weight:bold;
  line-height:90rpx;
  margin:0 20rpx;
  height: 90rpx;
}