/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-color: #27aad9;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #27aad9;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 30rpx;
  height: 30rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.checkbox{
  display: flex;
  align-items: center;
}

/* 数字输入框 */
/*主容器*/
.stepper {
  height: 22rpx;
  border-radius: 5px;
  display: flex;
  flex-direction: row-reverse;
}
/*加号和减号*/
.stepper image {
  /* float: left; */
  width:22rpx;
  height:22rpx;
  overflow: hidden;
}
/*数值*/
.stepper input,.countnum {
  display: inline-block;
  width:30rpx;
  height:22rpx;
  margin: 0 auto;
  text-align: center;
  font-size:22rpx;
  color: #27AAD9;
  line-height: 22rpx;
}
/*普通样式*/
.stepper .normal {
  color:white;
}
/*禁用样式*/
.stepper .disable {
  color: #eee;
}